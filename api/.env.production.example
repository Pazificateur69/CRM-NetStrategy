# ============================================
# CRM NetStrategy - Configuration Production
# ============================================
# Copier ce fichier vers .env et remplir les valeurs

# ============================================
# APPLICATION
# ============================================
APP_NAME="NetStrategy CRM"
APP_ENV=production
APP_KEY=base64:GENERER_AVEC_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://api.votre-domaine.com

# Frontend URL pour CORS (séparé par virgule si plusieurs domaines)
# ⚠️ CRITIQUE : Ne mettre que vos domaines autorisés
FRONTEND_URL=https://votre-domaine.com,https://www.votre-domaine.com

# ============================================
# LOCALISATION
# ============================================
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# ============================================
# MAINTENANCE
# ============================================
APP_MAINTENANCE_DRIVER=file

# ============================================
# SÉCURITÉ
# ============================================
# Nombre de rounds pour bcrypt (12 = bon équilibre sécurité/performance)
BCRYPT_ROUNDS=12

# ============================================
# LOGS
# ============================================
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ============================================
# BASE DE DONNÉES
# ============================================
# Option 1 : SQLite (simple, pas de serveur nécessaire)
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/crm/api/database/database.sqlite
DB_FOREIGN_KEYS=true

# Option 2 : MySQL (recommandé pour forte charge)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=crm_netstrategy
# DB_USERNAME=crm_user
# DB_PASSWORD=MOT_DE_PASSE_SECURISE_ICI

# ============================================
# SESSION
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
# ⚠️ OBLIGATOIRE EN PRODUCTION
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
# ⚠️ OBLIGATOIRE EN PRODUCTION (HTTPS)
SESSION_SECURE_COOKIE=true

# ============================================
# SANCTUM (AUTHENTIFICATION API)
# ============================================
# Expiration des tokens en minutes (480 = 8 heures)
# null = pas d'expiration (NON RECOMMANDÉ)
SANCTUM_TOKEN_EXPIRATION=480

# Domaines stateful (avec cookies, optionnel si vous utilisez Bearer tokens)
SANCTUM_STATEFUL_DOMAINS=votre-domaine.com,www.votre-domaine.com

# ============================================
# AUTORISATIONS COMPTABILITÉ
# ============================================
# IPs autorisées à accéder aux routes de comptabilité
# Format : IP1,IP2,IP3 ou * pour tout autoriser (NON RECOMMANDÉ EN PROD)
# ⚠️ IMPORTANT : Remplacer * par vos IPs réelles
ALLOWED_ACCOUNTING_IPS=192.168.1.10,10.0.0.5

# ============================================
# CACHE / QUEUE
# ============================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# ============================================
# REDIS (optionnel)
# ============================================
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ============================================
# MAIL (SMTP)
# ============================================
# ⚠️ Configurer avec vos identifiants SMTP réels
MAIL_MAILER=smtp
MAIL_HOST=smtp.votre-provider.com
MAIL_PORT=587
MAIL_USERNAME=votre@email.com
MAIL_PASSWORD=votre_mot_de_passe_smtp
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@votre-domaine.com
MAIL_FROM_NAME="${APP_NAME}"

# Exemples de providers :
# - Gmail : smtp.gmail.com:587
# - SendGrid : smtp.sendgrid.net:587
# - Mailgun : smtp.mailgun.org:587
# - Amazon SES : email-smtp.eu-west-1.amazonaws.com:587

# ============================================
# AWS (optionnel)
# ============================================
# Si vous utilisez S3 pour le stockage des fichiers
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=eu-west-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# MONITORING (optionnel)
# ============================================
# Sentry pour le monitoring d'erreurs
# SENTRY_LARAVEL_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================
# NOTES DE CONFIGURATION
# ============================================
# 1. Générer APP_KEY : php artisan key:generate
# 2. Créer la base : touch /var/www/crm/api/database/database.sqlite
# 3. Lancer migrations : php artisan migrate --force
# 4. Créer les rôles : php artisan db:seed --class=RolePermissionSeeder --force
# 5. Optimiser : php artisan config:cache && php artisan route:cache
# 6. Permissions : sudo chown -R www-data:www-data /var/www/crm/api
# 7. Tester : curl https://api.votre-domaine.com/api/login